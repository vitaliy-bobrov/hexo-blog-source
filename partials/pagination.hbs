<nav class="pagination mdl-grid" aria-label="Pagination navigation">
  {{#if pagination.previous}}
    <a class="pagination__link pagination__link_prev"
       href="/{{ pagination.previous.path }}"
       aria-label="Go to page {{ pagination.index }}">
      <button class="mdl-button ripple mdl-button--icon pagination__btn" aria-label="Go to page {{ pagination.index }}">
        <span class="ripple-ink"></span>
        <svg class="mdl-svg pagination__icon">
          <use xlink:href="/images/sprite.svg#arrow-back"></use>
        </svg>
      </button>
      Page {{ pagination.index }}
    </a>
  {{/if}}

  {{#if pagination.next}}
    <a class="pagination__link pagination__link_next"
       href="/{{ pagination.next.path }}"
       aria-label="Go to the next page">
      More
      <button class="mdl-button ripple mdl-button--icon pagination__btn" aria-label="Go to the next page">
        <span class="ripple-ink"></span>
        <svg class="mdl-svg pagination__icon">
          <use xlink:href="/images/sprite.svg#arrow-forward"></use>
        </svg>
      </button>
    </a>
  {{/if}}
</nav>
